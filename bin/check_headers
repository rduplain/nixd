PROG=check_headers

# Build a temporary configure script with GNU autoconf.

for program in date autoconf; do
    if ( ! which $program > /dev/null ); then
        echo "$PROG: requires '$program' program, but could not find it."
        exit 2
    fi
done

if [ $# -eq 0 ]; then
    exec >&2 # Redirect all further stdout to stderr.
    echo "usage: $PROG <header...>"
    echo
    echo "Examples:"
    echo
    echo "    $PROG sqlite3.h"
    echo "    $PROG sqlite3.h zmq.h"
    echo
    echo "Run in temporary directory, creates temp files in current directory."
    exit 2
fi

headers="$@"
name=$PROG
version=`date +"%Y-%m-%d_%H%M%S"`

set -e

autoconf -> configure <<EOF
AC_INIT($name, $version)
AC_CHECK_HEADERS($headers, , AC_MSG_ERROR(missing a development header))
EOF

chmod 755 configure
./configure
